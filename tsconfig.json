// tsconfig.json - VERSÃO FINAL E CORRIGIDA

{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],

     // =========================================================
    // =========== A CORREÇÃO ESTÁ NESSAS DUAS LINHAS ==========
    // =========================================================
    "baseUrl": ".", // <-- ESTA É A LINHA QUE FALTAVA! O PONTO DE PARTIDA.
    "paths": {
      "@/*": [
        "./src/*"  // <-- E este é o mapa. Agora eles funcionam juntos.
      ]
    },
    // =========================================================
    // =========================================================

    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}